{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./lib",
        "rootDir": "./src",
        "target": "es5",
        "module": "commonjs",
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "typeRoots": [
            "./@types",
            "./node_modules/@types"
        ],
        "lib": [
            "es2019"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./node_modules",
        "./lib"
    ]
}